// ==========================================================================
/******** MENU ********/
// ==========================================================================

.menu
	border-radius 0
	position fixed 
	width 100%
	z-index 5
	top 0
	background-color #000 !important
	
	.dropdown:hover, .dropdown:focus
		.dropdown-menu
			display block !important
			
	.dropdown-menu
		margin-top 0px
		
	.btn-primary
		background-color #4444
		color $naranja
		border-color #4444
		height 50px
		margin 0
		
		i
			color $naranja
			
	.btn-primary:hover, .btn-primary:focus, .open>.dropdown-toggle.btn-primary
		color #fff
		background-color #4444
	
	
	.navbar-brand
		padding 10px
		
		.logo
			width 200px
	ul
		
		li
			.icon-menu
				margin-right 5px
				
			.logout
				margin-right 10px
				
			a
				color #fff !important
				transition all 300ms ease-out 5ms
				-ms-transition all 300ms ease-out 5ms
				-webkit-transition all 300ms ease-out 5ms
				-ms-transition all 300ms ease-out 5ms
				font-size 12px
			
				&:hover, &:focus, &.active
					background-color transparent !important
					color #fff  !important
					font-size 16px
					text-decoration: underline
				
				
				.icon-menu
					color $naranja !important
					

				
	.dropdown-menu
		background-color #101010
		text-align right
		min-width: 100px
		
		li
				
			a
				color #fff !important
			
			a:hover, a:focus
				background-color #101010 !important
				color $naranja  !important

